<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <ImageView
        app:srcCompat="@drawable/apk_icon"
        android:id="@+id/imageView"
        android:contentDescription="@string/AlphabetTraslatorLogo"
        android:scaleType="fitXY"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.25"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="0dp"
        android:text="@string/Credits"
        android:id="@+id/textViewCredits"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/app_version"
        android:id="@+id/textViewVersion"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteX="54dp"
        tools:layout_conversion_absoluteY="65dp"
        tools:layout_conversion_absoluteWidth="104dp"
        tools:layout_conversion_absoluteHeight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:layout_marginTop="30dp"
        />

    <Button
        android:text="@string/send_me_your_feedback"
        android:id="@+id/buttonFeedbackSend"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:layout_conversion_absoluteX="31dp"
        tools:layout_conversion_absoluteY="90dp"
        tools:layout_conversion_absoluteWidth="150dp"
        tools:layout_conversion_absoluteHeight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guideline5"
        android:minWidth="70dip"
        android:minHeight="30dp"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.25"
        />

    <Button
        android:text="@string/rate_app"
        android:id="@+id/buttonRateApp"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteX="71dp"
        tools:layout_conversion_absoluteY="130dp"
        tools:layout_conversion_absoluteWidth="70dp"
        tools:layout_conversion_absoluteHeight="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonFeedbackSend"
        app:layout_constraintRight_toRightOf="@+id/buttonFeedbackSend"
        android:minHeight="15dp"
        android:minWidth="70dip"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintVertical_bias="0.75"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="296dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="156dp"
        tools:layout_editor_absoluteX="0dp"/>


</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <ImageView
        app:srcCompat="@drawable/apk_icon"
        android:id="@+id/imageView"
        android:contentDescription="@string/AlphabetTraslatorLogo"
        android:scaleType="fitXY"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewVersion"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.4"/>


    <TextView
        android:layout_width="wrap_content"
        android:text="@string/app_version"
        android:id="@+id/textViewVersion"
        android:gravity="center"
        android:textSize="9sp"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteX="54dp"
        tools:layout_conversion_absoluteY="65dp"
        tools:layout_conversion_absoluteWidth="104dp"
        tools:layout_conversion_absoluteHeight="15dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFeedbackSend"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>

    <TextView
        android:layout_width="0dp"
        android:text="@string/Credits"
        android:id="@+id/textViewCredits"
        android:gravity="center"
        android:textSize="8sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewVersion"
        app:layout_constraintBottom_toTopOf="@+id/buttonFeedbackSend"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"/>

    <Button
        android:text="@string/send_me_your_feedback"
        android:id="@+id/buttonFeedbackSend"
        android:textSize="8sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:layout_conversion_absoluteX="31dp"
        tools:layout_conversion_absoluteY="90dp"
        tools:layout_conversion_absoluteWidth="150dp"
        tools:layout_conversion_absoluteHeight="30dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRateApp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:minWidth="70dip"
        android:minHeight="30dp"/>

    <Button
        android:text="@string/rate_app"
        android:id="@+id/buttonRateApp"
        android:layout_width="wrap_content"
        android:textSize="8sp"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteX="71dp"
        tools:layout_conversion_absoluteY="130dp"
        tools:layout_conversion_absoluteWidth="70dp"
        tools:layout_conversion_absoluteHeight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:minHeight="15dp"
        android:minWidth="70dip"/>


</android.support.constraint.ConstraintLayout>
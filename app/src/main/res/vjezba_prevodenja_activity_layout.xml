<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/mainPanel"
    android:baselineAligned="false"
    android:orientation="vertical">
    <!--xmlns:tools="http://schemas.android.com/tools"-->
    <!--tools:context="hr.stips.myapplication.IgraPrevodenja"-->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/generiraniTextID"
        android:editable="true"
        android:background="#FFF"
        android:gravity="left|center_vertical"
        android:hint="@string/generirani"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textIsSelectable="false"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/uneseniPrevedeniTextID"
        android:background="#FFF"
        android:editable="true"
        android:gravity="left|center_vertical"
        android:hint="@string/unesi_prijevod_i_provjeri_hint"
        android:layout_below="@+id/generiraniTextID"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:textIsSelectable="false"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchFunctionButtonID"
        android:src="@mipmap/ic_swap_horiz_white"
        android:contentDescription="@string/zamjeni"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/prozorcic1Generator"
        android:background="#FFF"
        android:text="@string/Latinica"
        android:layout_alignBottom="@+id/switchFunctionButtonID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/prozorcic2Generator"
        android:background="#FFF"
        android:text="@string/Ä†irilica"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/provjeri"
        android:id="@+id/provjeriButtonID"
        android:layout_centerInParent="false"
        android:layout_marginEnd="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/switchFunctionButtonID"
        android:layout_toStartOf="@+id/switchFunctionButtonID"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/generiraj_text"
        android:id="@+id/generirajTextButtonID"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/prozorcic2Generator"
        android:layout_toEndOf="@+id/prozorcic2Generator"
        android:layout_marginStart="75dp"
        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/duljina_recenice"
        android:id="@+id/textViewDuljinaRijeci"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@+id/guideline12"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <RadioButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_1_rijeci"
        android:id="@+id/radioButton1Rijec"
        android:checked="false"
        android:clickable="true"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textViewDuljinaRijeci"
        app:layout_constraintRight_toRightOf="@+id/textViewDuljinaRijeci"
        app:layout_constraintLeft_toLeftOf="@+id/textViewDuljinaRijeci"
        android:textSize="25sp"
        android:layout_marginTop="8dp"/>

    <RadioButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_2_rijeci"
        android:id="@+id/radioButton2Rijeci"
        android:checked="false"
        android:clickable="true"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/radioButton1Rijec"
        app:layout_constraintTop_toBottomOf="@+id/radioButton1Rijec"
        app:layout_constraintLeft_toLeftOf="@+id/radioButton1Rijec"
        android:textSize="25sp"
        android:layout_marginTop="8dp"/>

    <RadioButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_3_rijeci"
        android:id="@+id/radioButton3Rijeci"
        android:checked="false"
        android:clickable="true"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="@+id/radioButton2Rijeci"
        app:layout_constraintLeft_toLeftOf="@+id/radioButton2Rijeci"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/radioButton2Rijeci"/>

    <RadioButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_n_rijeci"
        android:id="@+id/radioButtonNRijeci"
        android:checked="false"
        android:clickable="true"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/radioButton3Rijeci"
        app:layout_constraintLeft_toLeftOf="@+id/radioButton3Rijeci"
        app:layout_constraintRight_toRightOf="@+id/radioButton3Rijeci"
        app:layout_constraintHorizontal_bias="0.97"
        android:textSize="25sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/jezik"
        android:id="@+id/textViewJezik"
        android:enabled="true"
        android:textSize="30sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="@+id/imageButtonCroatian"
        android:layout_marginBottom="127dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewTemaID"
        app:layout_constraintTop_toTopOf="@+id/guideline13"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.04000002"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonCroatian"
        android:src="@drawable/croatian_flag_resized"
        android:background="#00ffffff"
        android:clickable="true"
        android:contentDescription="@string/Hrvatski"
        android:contextClickable="true"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonSerbian"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewJezik"
        android:layout_marginRight="30dp"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchTheme"
        android:checked="false"
        android:textOn="@string/dark"
        android:textOff="@string/default_tema"
        android:textSize="20sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTemaID"
        app:layout_constraintLeft_toLeftOf="@+id/textViewTemaID"
        app:layout_constraintHorizontal_bias="0.33"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tema_programa"
        android:id="@+id/textViewTemaID"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewDuljinaRijeci"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:id="@+id/imageButtonSerbian"
        android:src="@drawable/serbia_flag_resized"
        android:background="#00ffffff"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonCroatian"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButtonCroatian"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonEnglish"
        android:src="@drawable/uk_flag_resized"
        android:background="#00ffffff"
        android:clickable="true"
        android:contentDescription="@string/Engleski"
        android:contextClickable="true"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="30dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/imageButtonSerbian"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonSerbian"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonSerbian"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        app:layout_constraintGuide_percent="0.5088063"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="582dp"
        tools:layout_editor_absoluteX="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline13"
        app:layout_constraintGuide_percent="0.75"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="857dp"
        tools:layout_editor_absoluteX="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline12"
        app:layout_constraintGuide_percent="0.058708414"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="67dp"
        tools:layout_editor_absoluteX="0dp"/>


</android.support.constraint.ConstraintLayout>
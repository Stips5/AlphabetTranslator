<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/mainPanel"
                                             android:baselineAligned="false"
                                             android:orientation="vertical">

    <TextView
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/generiraniTextID"
        android:editable="true"
        android:background="#FFF"
        android:gravity="left|center_vertical"
        android:hint="@string/generirani"
        android:enabled="true"
        android:textIsSelectable="false"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline17"
        android:layout_marginBottom="8dp"
        android:textSize="30sp"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/uneseniPrevedeniTextID"
        android:background="#FFF"
        android:editable="true"
        android:gravity="left|center_vertical"
        android:hint="@string/unesi_prijevod_i_provjeri_hint"
        android:inputType="text"
        android:textIsSelectable="false"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/generirajTextButtonID"
        app:layout_constraintVertical_bias="0.32999998"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/prozorcic1Generator"
        android:background="#FFF"
        android:text="@string/Latinica"
        app:layout_constraintBottom_toTopOf="@+id/generiraniTextID"
        app:layout_constraintLeft_toLeftOf="@+id/generiraniTextID"
        app:layout_constraintRight_toRightOf="@+id/generiraniTextID"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/prozorcic2Generator"
        android:background="#FFF"
        android:text="@string/Ä†irilica"
        app:layout_constraintLeft_toLeftOf="@+id/uneseniPrevedeniTextID"
        app:layout_constraintBottom_toTopOf="@+id/uneseniPrevedeniTextID"
        app:layout_constraintRight_toRightOf="@+id/uneseniPrevedeniTextID"
        android:textSize="24sp"/>

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/switchFunctionButtonID"
        android:contentDescription="@string/zamjeni"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/prozorcic1Generator"
        app:layout_constraintRight_toRightOf="@+id/generiraniTextID"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generiraj_text"
        android:id="@+id/generirajTextButtonID"
        app:layout_constraintBottom_toTopOf="@+id/guideline17"
        app:layout_constraintTop_toBottomOf="@+id/generiraniTextID"
        app:layout_constraintVertical_bias="0.32999998"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textSize="30sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/provjeri"
        android:id="@+id/provjeriButtonID"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/uneseniPrevedeniTextID"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.33"
        android:textSize="30sp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline17"
        app:layout_constraintGuide_percent="0.5498392"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="420dp"
        tools:layout_editor_absoluteX="0dp"/>

</android.support.constraint.ConstraintLayout>
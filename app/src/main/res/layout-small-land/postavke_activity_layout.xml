<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/duljina_recenice"
        android:id="@+id/textViewDuljinaRijeci"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/guideline12"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1_rijeci"
        android:id="@+id/radioButton1Rijec"
        android:checked="false"
        android:clickable="true"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline12"
        app:layout_constraintBottom_toTopOf="@+id/guideline32"
        app:layout_constraintRight_toLeftOf="@+id/guideline33"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="16dp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_2_rijeci"
        android:id="@+id/radioButton2Rijeci"
        android:checked="false"
        android:clickable="true"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/guideline12"
        app:layout_constraintBottom_toTopOf="@+id/guideline32"
        app:layout_constraintLeft_toLeftOf="@+id/guideline33"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="16dp"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_3_rijeci"
        android:id="@+id/radioButton3Rijeci"
        android:checked="false"
        android:clickable="true"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@+id/guideline32"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline33"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintHorizontal_bias="1.0"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_n_rijeci"
        android:id="@+id/radioButtonNRijeci"
        android:checked="false"
        android:clickable="true"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline33"
        app:layout_constraintBottom_toTopOf="@+id/guideline11"
        app:layout_constraintTop_toTopOf="@+id/guideline32"
        app:layout_constraintHorizontal_bias="0.0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/jezik"
        android:id="@+id/textViewJezik"
        android:enabled="true"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/guideline11"/>

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageButtonCroatian"
        android:src="@drawable/croatian_flag_resized"
        android:background="#00ffffff"
        android:clickable="true"
        android:contentDescription="@string/Hrvatski"
        android:contextClickable="true"
        app:layout_constraintTop_toTopOf="@+id/imageButtonSerbian"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonSerbian"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonSerbian"
        android:scaleType="fitXY"/>

    <Switch
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/switchTheme"
        android:checked="false"
        android:textOn="@string/dark"
        android:textOff="@string/default_tema"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewTemaID"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:textSize="12sp"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tema_programa"
        android:id="@+id/textViewTemaID"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/guideline13"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageButtonSerbian"
        android:src="@drawable/serbia_flag_resized"
        android:background="#00ffffff"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/guideline13"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"/>

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imageButtonEnglish"
        android:src="@drawable/uk_flag_resized"
        android:background="#00ffffff"
        android:clickable="true"
        android:contentDescription="@string/Engleski"
        android:contextClickable="true"
        app:layout_constraintTop_toTopOf="@+id/imageButtonSerbian"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButtonSerbian"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonSerbian"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        android:scaleType="fitXY"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        app:layout_constraintGuide_percent="0.5070422"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="108dp"
        tools:layout_editor_absoluteX="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline13"
        app:layout_constraintGuide_percent="0.75117373"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="160dp"
        tools:layout_editor_absoluteX="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline12"
        app:layout_constraintGuide_percent="0.058708414"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="13dp"
        tools:layout_editor_absoluteX="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline32"
        app:layout_constraintGuide_percent="0.3051643"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="65dp"
        tools:layout_editor_absoluteX="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/guideline33"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="107dp"/>


</android.support.constraint.ConstraintLayout>